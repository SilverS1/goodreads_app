<div class = "row"> 
	<div class = "col-md-6 col-md-offset-3">
		<%= form_for @book, :html => {:multipart => true} do |f| %>
			<%= f.label :title %> 
			<%= f.text_field :title, class: "form-control" %> 
			
			<%= f.label :author %> 
			<%= f.text_field :author, class: "form-control" %>
			
			<%= f.label :genre %>
			<%= f.text_field :genre, class: "form-control" %>
			
			<%= f.label :synopsis %> 
			<%= f.text_area :synopsis, class: "form-control", :style => "height: 200px; vertical-align: text-top;"%>
			
			<%= f.label :cover %>
			<%= f.file_field :cover %>
			
			<div class="form-group">
				<%= f.label :tags, "Tags (seperated by commas)" %>
				<%= f.text_field :tag_list, :value => @book.tag_list.join(", "), class: "form-control" %> 
			</div>
			
			
			<p class = "line-height"></p>
			
			<% if current_page?(controller: 'books', action: 'new') %>
				<%= f.submit  "Create a book", class: "btn btn-primary", data: {disable_with: "Creating..."} %> 
			<% else current_page?(controller: 'books', action: 'edit') %>
				<%= f.submit  "Save changes", class: "btn btn-primary", data: {disable_with: "Saving..."} %> 
			<% end %>
		<% end %>
	</div>
</div>