<%= provide(:title, "Browse Genre") %>

<%= link_to "Back", browse_index_path %>

<h1>Browse by Genre</h1>

<div>
	<%= form_tag @book, :method => 'get', :id => "products_search" do %>
  		<p>	
    		<%= text_field_tag :search, params[:search] %>
    		<%= submit_tag "Search", :name => nil %>
  		</p>
  		
  		<div id="books"><%= render 'books' %></div>
  		
	<% end %>
</div>


<ul class = "books" > 
	<%= render @books %>
</ul>


<%= will_paginate @books %>
